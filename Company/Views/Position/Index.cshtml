@model IEnumerable<Company.Data.Position>

@{
    ViewData["Title"] = "Список должностей";
}

<h1>Список должностей ЖК КР</h1>

<p>
    <a asp-action="Create">Добавить новый должность</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Должность ЖК КР
            </th>
            <th>
                Описание должности
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specification)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
