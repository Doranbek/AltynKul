@model ApplicationSM


@{
    ViewData["Title"] = "Регистрация заявок";
}


<div class="text-left">

    <h1 class="text-left">Регистрация заявок</h1>
    
    <form asp-action="Registration" asp-controller="Registration" asp-anti-forgery="true">


        <div class="container">

            <div class="row">
                <div class="col-2">

                </div>
                <div class="col-2"></div>
            </div>

        </div>

        <div class="container">
            <div class="row">
                <div class="col-2">
                    <label asp-for="FullName" class="control-label">Ф.И.О сотрудника</label>
                </div>
                <div class="col-5">
                    <input class="form-control" asp-for="FullName" placeholder="Ф.И.О." />
                    <span asp-validation-for="FullName" />
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    <label asp-for="DepartmentId" class="control-label">Отдел</label>

                </div>
                <div class="col-5">
                    <select class="form-control" asp-for="DepartmentId" asp-items="Model.Departments">
                        <option>Выберите отдел</option>

                    </select>
                    
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    <label asp-for="PositionId" class="control-label">Должность</label>
                </div>
                <div class="col-5">
                    <select class="form-control" asp-for="PositionId" asp-items="Model.Positions">
                        <option>Выберите должность</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col-2">
                    <label asp-for="CampId" class="control-label">Поток</label>
                </div>
                <div class="col-5">
                    <select class="form-control" asp-for="CampId" asp-items="Model.Camps">
                        <option>Выберите поток</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    <label asp-for="CampersNumber" class="control-label">Число отдыхающих</label>
                </div>
                <div class="col-5">
                    <input class="form-control" asp-for="CampersNumber" placeholder="CampersNumber" />
                    <span asp-validation-for="CampersNumber" />
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    <label asp-for="CategoryId" class="control-label">Категория номера</label>
                </div>
                <div class="col-5">
                    <select class="form-control" asp-for="CategoryId" asp-items="Model.Categories">
                        <option>Выберите категория номера</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col-2">
                    <input type="submit" value="Создать" class="btn btn-primary" /> 
                </div>
                <div>
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="text-success"  role="alert">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                </div>

                <div class="validation" asp-validation-summary="All"></div>
            </div>
        </div>
    </form>
</div>
