@model IEnumerable<Company.Data.Category>

@{
    ViewData["Title"] = "Список категории номеров";
}

<h1>Список категории номеров</h1>

<p>
    <a asp-action="Create">Добавление новой категории</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Категория номеров
            </th>
            <th>
                Описание номеров
            </th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specification)
            </td>            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
